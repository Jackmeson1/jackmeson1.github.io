---
layout: null
permalink: /search.json
---
[
{% assign posts = site.posts | sort: 'date' | reverse %}
{% for post in posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "date": {{ post.date | date: "%Y-%m-%d" | jsonify }},
    "date_formatted": {{ post.date | date: "%b %d, %Y" | jsonify }},
    "categories": {{ post.categories | join: ', ' | jsonify }},
    "excerpt": {{ post.description | default: post.excerpt | strip_html | strip_newlines | truncate: 200 | jsonify }},
    "content": {{ post.content | strip_html | strip_newlines | truncate: 400 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
